<title>@Model.Title</title>
<!--#include file="/linkscript.html"-->
<!--#include file="/headend.html"-->
<!--#include file="/navbar.html"-->
<main id="post-page" class="container mainContent" role="main">
    <div class="row">
        <div class="col-md-10 col-md-push-1">
            <article class="panel post tag-promise tag-javascript">
              <header class="panel-heading post-header">
                        <h1 class="post-title text-center" style="color:red">
                            <span>@Model.Title</span>
                        </h1>
                        <h4 class="text-right" id="subtitle">类别：<a href="http://localhost:3847/News/@(Model.CategoryId)/index_1.shtml">@Model.CategoryName</a>；发表日期：@Model.Time</h4>
               </header>
            <section id="articleBody" class="panel-body post-content">
                @KHRazor.KHHelper.Raw(Model.Body)
            </section>
            <section id="moreSiblings" class="panel-body post-content text-center">
                <a href="http://localhost:3847/News/@(Model.CategoryId)/index_1.shtml" class="btn btn-default">查看更多@(Model.CategoryName)&gt;&gt;</a>
            </section>
        </div>
    </div>
</main>

